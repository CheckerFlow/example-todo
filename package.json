{
  "name": "todo",
  "private": true,
  "workspaces": [
    "api",
    "web"
  ],
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "core-js": "^3.2.1",
    "@hammerframework/eslint-config-hammer": "^0.0.1-alpha.8"
  },
  "eslintConfig": {
    "extends": "@hammerframework/eslint-config-hammer"
  },
  "scripts": {
    "dev": "yarn dev:api & yarn dev:web",
    "open": "open http://localhost:8910",
    "dev:api": "yarn workspace api dev",
    "dev:web": "yarn workspace web dev",
    "db:save": "yarn workspace api prisma2 lift save",
    "db:up": "yarn workspace api prisma2 lift up && yarn workspace api prisma2 generate",
    "lint": "yarn eslint 'web/src/**/*.js' 'api/src/**/*.js'",
    "lint:fix": "yarn eslint --fix 'web/src/**/*.js' 'api/src/**/*.js'"
  }
}
